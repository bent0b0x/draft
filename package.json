{
  "name": "alexa-ui",
  "version": "0.0.0",
  "description": "UI for alexa top sites analysis",
  "scripts": {
    "dev": "yarn run clean && yarn run prep && webpack-dev-server -d --hot --progress",
    "build": "yarn run clean && yarn run prep && NODE_ENV=production webpack --progress --colors",
    "prep": "mkdir build/ && cp index.html build/ && cp -r app/assets build/",
    "clean": "rm -rf build/",
    "lint": "eslint app test",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "quality": "yarn run lint && yarn run flow",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-sound": "^0.8.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-object-rest-spread": "^0.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "flow-bin": "^0.49.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.1",
    "prettier": "^1.5.2",
    "react-transform-hmr": "^1.0.4",
    "sass": "^1.38.1",
    "sass-loader": "10.1.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "4",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0"
  }
}
